<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DefaultRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/MainLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/TopLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00aa00"
            android:orientation="vertical">

            <!-- 当前获取的城市名-->
            <LinearLayout
                android:id="@+id/FirstRowLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="10">

                <TextView
                    android:id="@+id/cityName"
                    android:text="Chongqing, China"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:layout_weight="2"
                    android:gravity="center" />

                <com.ant.liao.GifView
                    android:id="@+id/rfsIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/loading"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Image_TemperatureLayout"
                android:layout_width="fill_parent"
                android:layout_height="140dp"
                android:background="#00aa00"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ImageLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#00aa00"
                    android:orientation="horizontal">

                    <!-- 当前的天气图片-->
                    <ImageView
                        android:id="@+id/curDescIcon"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TemperatureLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00aa00"
                    android:orientation="horizontal">

                    <!-- 当前温度-->
                    <TextView
                        android:id="@+id/curTempC"
                        android:text="17°C"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:textSize="50dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 天气状况：小雨/暴雨-->
            <TextView
                android:id="@+id/curDesc"
                android:text="Sunny"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="20dp" />

            <!-- 显示系统时间-->
            <TextView
                android:id="@+id/sysTime"
                android:text="2015/11/11 12:30"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FutureLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 明天的天气概要-->
            <LinearLayout
                android:id="@+id/TomorrowLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FFDEAD"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tmrDate"
                    android:text="11-11"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tmrTempC"
                    android:text="15°C"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tmrDesc"
                    android:text="Cloudy"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp" />

            </LinearLayout>

            <!-- 后天的天气概要-->
            <LinearLayout
                android:id="@+id/DayAfterTomorrowLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FFD39B"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/datDate"
                    android:text="11-12"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/datTempC"
                    android:text="16°C"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/datDesc"
                    android:text="Rainy"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>